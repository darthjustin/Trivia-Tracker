<Window x:Class="Trivia_Tracker.ViewModel.AddPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trivia_Tracker"
        mc:Ignorable="d"
        Title="AddPlayer" Height="450" Width="800" Background="#FFF2F2F2">
    <Grid UseLayoutRounding="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.125*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Background="#FF4AC3AF">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Content="Button" Grid.Row="1" VerticalAlignment="Center" UseLayoutRounding="True" HorizontalAlignment="Center" Height="72" Width="90">
                <Button.Background>
                    <ImageBrush Stretch="Uniform" ImageSource="/Assets/users-alt.png" Opacity="1">
                        <ImageBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="0.25" ScaleY="0.25"/>
                                <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                <RotateTransform CenterX="0.5" CenterY="0.5"/>
                                <TranslateTransform X="-0.25"/>
                            </TransformGroup>
                        </ImageBrush.RelativeTransform>
                    </ImageBrush>
                </Button.Background>
            </Button>
            <Button Content="Button" Grid.Row="2" VerticalAlignment="Center" UseLayoutRounding="True" HorizontalAlignment="Center" Height="72" Width="90" Background="{x:Null}"/>
            <Button Content="Button" Grid.Row="3" VerticalAlignment="Center" UseLayoutRounding="True" HorizontalAlignment="Center" Height="72" Width="90" Background="{x:Null}"/>
            <Button Content="Button" Grid.Row="5" VerticalAlignment="Center" UseLayoutRounding="True" HorizontalAlignment="Center" Height="72" Width="90" Background="{x:Null}"/>
        </Grid>

    </Grid>
</Window>
